<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/background_color"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_6sdp"
        android:background="@color/white"
        android:elevation="@dimen/_3sdp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_8sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_115sdp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_4sdp"
                android:scaleType="fitXY"
                android:src="#989898" />

            <RelativeLayout
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/circle_filled_red"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="20%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/favouriteImageView"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_fav_select" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/strike_through"></View>

        <TextView
            android:id="@+id/productNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:maxLines="2"
            android:minHeight="@dimen/_35sdp"
            android:text="Freedom Refined Sunflower"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <RelativeLayout
            android:id="@+id/optionsLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/item_border">

            <Spinner
                android:id="@+id/optionsSpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:padding="@dimen/_5sdp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/offerCostTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_2sdp"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/_3sdp"
                android:text="₹350"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/costTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/strike_through"
                android:gravity="center|right"
                android:paddingLeft="@dimen/_3sdp"
                android:text="₹420"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <TextView
            android:id="@+id/addTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/green_square_rounded"
            android:gravity="center"
            android:paddingLeft="@dimen/_13sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingRight="@dimen/_13sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="ADD"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>